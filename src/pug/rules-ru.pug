extends layouts/_layout.pug

block vars
	- var selectedLang = 'ru';
	- var pageUrl = '/rules';

block title
	| !{lang.rulesPageTitle}

block description
	meta(name="description" content=lang.rulesPageDescription)
	link(rel='canonical' href=lang.websiteDomain + pageUrl)

block og
	meta(name="og:title" content=lang.rulesPageTitle)
	meta(name="og:description" content=lang.rulesPageDescription)
	meta(name="og:type" content="website")
	meta(name="og:locale" content=selectedLang)

	meta(name="og:url" content=lang.websiteDomain + pageUrl)
	meta(name="og:image" content=lang.websiteDomain + "/static/img/" + selectedLang + "/og_image.jpg")

	meta(name="twitter:title" content=lang.rulesPageTitle)
	meta(name="twitter:description" content=lang.rulesPageDescription)
	meta(name="twitter:card" content="summary_large_image")

	meta(name="twitter:url" content=lang.websiteDomain + pageUrl)
	meta(name="twitter:image" content=lang.websiteDomain + "/static/img/" + selectedLang + "/og_image.jpg")



block content
	main.main
		section.banner
			.container
				.banner__content 
					.banner__info
						h1.title1.banner__title !{ lang.rulesTitle }
						.text.banner__text !{ lang.rulesText }

		section.info
			.container
				.info__content
					.info__main !{ lang.rulesContent }
					if lang.rulesCreate
						a.btn.info__btn(href="/login") !{ lang.rulesCreate }

		if selectedLang != 'ru'
			section.start.main__start
				.container
					.start__content
						h2.title1.start__title !{ lang.startTitle }
						p.text.text--big.start__text !{ lang.startText }
						a.btn.btn--black.start__btn(href="/login") !{ lang.startCreate }
						+picture('static/img/start/deer', 'png', 'start__deer', 240, 239, true)
						+picture('static/img/start/tree', 'png', 'start__tree', 293, 340, true)
						+picture('static/img/start/santa', 'png', 'start__santa', 277, 300, true)