extends layouts/_panel.pug

block vars
    - var selectedLang = 'ru';
    - var pageUrl = '';

block title
    | !{lang.homePageTitle}

block description
    meta(name="description" content=lang.homePageDescription)
    link(rel='canonical' href=lang.websiteDomain + pageUrl)

block og
    meta(name="og:title" content=lang.homePageTitle)
    meta(name="og:description" content=lang.homePageDescription)
    meta(name="og:type" content="website")
    meta(name="og:locale" content=selectedLang)

    meta(name="og:url" content=lang.websiteDomain + pageUrl)
    meta(name="og:image" content=lang.websiteDomain + "/static/img/" + selectedLang + "/og_image.jpg")

    meta(name="twitter:title" content=lang.homePageTitle)
    meta(name="twitter:description" content=lang.homePageDescription)
    meta(name="twitter:card" content="summary_large_image")

    meta(name="twitter:url" content=lang.websiteDomain + pageUrl)
    meta(name="twitter:image" content=lang.websiteDomain + "/static/img/" + selectedLang + "/og_image.jpg")


block content
    .panel
        .panel__header
            button.link.link--primary.link--medium.link--flex.panel__link.js-open-popup(data-popup-name="exit")
                svg(svg class="link__back" width="11" height="19" viewBox="0 0 11 19" fill="none" xmlns="http://www.w3.org/2000/svg")
                    path(d="M9.5 17.7L1 9.39999L9.5 1" stroke="#F74F4F" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
                span !{lang.panel_backBtn}
            a.link.link--primary.link--medium.link--flex.panel__link(href="fast-game-full.html") 
                span !{lang.panel_playersBtn}
                svg(class="link__icon" width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg")
                    path(d="M11.5 14C13.9853 14 16 11.9853 16 9.5C16 7.01472 13.9853 5 11.5 5C9.01472 5 7 7.01472 7 9.5C7 11.9853 9.01472 14 11.5 14Z" stroke="#F74F4F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
                    path(d="M5 25V22.6667C5 21.429 5.45655 20.242 6.2692 19.3668C7.08186 18.4917 8.18406 18 9.33333 18H13.6667C14.8159 18 15.9181 18.4917 16.7308 19.3668C17.5435 20.242 18 21.429 18 22.6667V25" stroke="#F74F4F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
                    path(d="M19 5C20.1442 5.25583 21.1584 5.83694 21.8826 6.65172C22.6069 7.46649 23 8.46858 23 9.5C23 10.5314 22.6069 11.5335 21.8826 12.3483C21.1584 13.1631 20.1442 13.7442 19 14" stroke="#F74F4F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
                    path(d="M25 25V22.9487C24.9949 22.0432 24.6979 21.1649 24.1553 20.4507C23.6126 19.7364 22.8548 19.2264 22 19" stroke="#F74F4F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round")
        h1.panel-title1.panel__title !{lang.panel_offlineTitle}
        .panel-card.panel__card
            .panel-text.panel-card__text !{lang.panel_offlineWhoText}
            h2.panel-card__title !{lang.panel_offlineWhoTitle}
            +picture('/static/img/panel/cards/2', 'png', 'panel-card__img', 101, 96, false)
        .panel-text.panel__card-ps
            p !{lang.panel_offlineWhoMessage}
        .panel__btns
            a.btn.btn--panel.panel__btns-item(href="offline-whom.html") !{lang.panel_offlineWhoSubmit}
            button.btn.btn--panel.btn--light.panel__btns-item !{lang.panel_offlineWhoCancel}

block modals
    .popup.popup--panel(data-name="exit")
        .panel-modal.popup__panel-modal
            .panel-confirm
                .panel-confirm__info
                    +picture('static/img/panel/confirm/bread-man', 'png', 'panel-confirm__img', 170, 112, false)
                    .panel-title3.panel-confirm__title !{lang.panel_offlineExitTitle}
                    .panel-text.panel-confirm__text !{lang.panel_offlineExitText}
                .panel-confirm__btns
                    button.btn.btn--panel.panel-confirm__btn.js-close-popup !{lang.panel_offlineExitCancel}
                    a.btn.btn--panel.btn--light.panel-confirm__btn.js-close-popup(href="main-screen.html") !{lang.panel_offlineExitBtn}
            button.panel-modal__close.popup__close